<Window x:Class="ChatUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="155">
            <Label Content="Name"></Label>
            <TextBox x:Name="FieldName"></TextBox>
            <Label Content="Phone"></Label>
            <TextBox x:Name="FieldPhone"></TextBox>
            <Label Content="Image"></Label>
            <TextBox x:Name="FieldImage"></TextBox>
            <Button x:Name="AddUser" Content="AddUser" Click="AddUser_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
